<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>
    <%= categoryName %>
  </title>
</head>

<body>
  <header>
    <a href="/">
      <h1>Odin Foods</h1>
    </a>
  </header>
  <main>
    <%- include("partials/errors.ejs") %>
      <div class="categoryNameBox">

        <ul>
          <% if (locals.category) {%>

            <li>
              <%= category.name %>
            </li>

            <% } %>
        </ul>
      </div>
      <div class="categoryItems">

        <ul>
          <% if (locals.items) {%>
            <% items.forEach(item=> { %>
              <a href="/item/<%= item.id %>">

                <li>
                  <%= item.name %>
                    <br>
                    $<%= item.price %>
                </li>
              </a>
              <% }); %>
                <% } %>
        </ul>
      </div>
      <div class="categoryLinks">
        <a href="/updateCategory/<%= category.id %>">Update Category</a>
        <form action="/deleteCategory/<%= category.id %>" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this category?');">Delete
            Category</button>
        </form>

      </div>
  </main>
  <footer>
    <h3>Copyright 2024 DDJCS50</h3>
  </footer>
</body>

</html>